<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\UI.xsd" xmlns="http://www.blizzard.com/wow/ui/">	
	<Frame name="kAuctionCurrentItemWidget" virtual="true" enableMouse="true">
		<Size>
			<AbsDimension y="24" />
		</Size>
		<Layers>
			<Layer level="BORDER">
				<FontString name="$parentItemNameText" font="Fonts\FRIZQT__.TTF" text="Lorem ipsum dolor sit">
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT">
							<Offset>
								<AbsDimension x="30"/>
							</Offset>
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="9" />
					</FontHeight>
					<Color r="0.9" g="0.82" b="0" />
				</FontString>				
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture inherits="kAuctionHighlightTextureTemplate"/>
			</Layer>
		</Layers>
		<Anchors>
			<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT">
				<Offset>
					<AbsDimension x="5" y="0" />
				</Offset>
			</Anchor>
			<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT">
				<Offset>
					<AbsDimension x="-22" y="0" />
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>			
			<Button name="$parentCurrentItem" inherits="kAuctionIconTemplate" id="1">	
				<Anchors>
					<Anchor point="LEFT" />
				</Anchors>
				<Scripts>
					<OnEnter>
						kAuction:OnCurrentItemEnter(self);
					</OnEnter>
					<OnLeave>
						kAuction:OnCurrentItemLeave(self);
					</OnLeave>
				</Scripts>
			</Button>						
			<Button name="$parentClose" inherits="kAuctionTextIconTemplate">
				<Anchors>
					<Anchor point="RIGHT">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\kAuction\Images\Textures\xdark" />
				<HighlightTexture file="Interface\AddOns\kAuction\Images\Textures\x" />
				<Scripts>
					<OnEnter>
						kAuction:Gui_OnEnterCloseIcon(self)
					</OnEnter>	
				</Scripts>					
			</Button>									
		</Frames>
		<Scripts>
			<OnMouseDown>
				kAuction:Gui_AuctionItemOnClick(self, button)
			</OnMouseDown>
			<OnEnter>
				kAuction:Gui_AuctionItemOnEnter(self)
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
		</Scripts>
	</Frame>
</Ui>